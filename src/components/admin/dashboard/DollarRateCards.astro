---
interface DollarRate {
	casa: string;
	nombre: string;
	compra: number;
	venta: number;
	fecha_actualizacion: string;
	updated_at?: string;
}

interface Props {
	oficial: DollarRate | null;
	blue: DollarRate | null;
}

const { oficial, blue } = Astro.props;

function formatCurrency(value: number): string {
	return `$${value.toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
}

function formatDate(dateStr: string): string {
	const date = new Date(dateStr);
	return date.toLocaleString('es-AR', {
		timeZone: 'America/Argentina/Buenos_Aires',
		day: '2-digit',
		month: '2-digit',
		year: 'numeric',
		hour: '2-digit',
		minute: '2-digit',
	});
}

const dollarIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>`;
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
	{oficial ? (
		<div class="bg-white p-8 rounded-3xl border border-secondary/5 shadow-sm">
			<div class="flex items-center justify-between mb-6">
				<h3 class="text-xs font-bold uppercase tracking-widest text-secondary/40">
					D贸lar Oficial
				</h3>
				<div
					class="w-10 h-10 bg-green-500/10 rounded-xl flex items-center justify-center text-green-600"
					set:html={dollarIcon}
				/>
			</div>
			<div class="flex items-end gap-6">
				<div>
					<p class="text-xs font-semibold text-secondary/40 mb-1">Compra</p>
					<p class="text-3xl font-black text-secondary">{formatCurrency(oficial.compra)}</p>
				</div>
				<div>
					<p class="text-xs font-semibold text-secondary/40 mb-1">Venta</p>
					<p class="text-3xl font-black text-secondary">{formatCurrency(oficial.venta)}</p>
				</div>
			</div>
			<p class="mt-4 text-xs text-secondary/40">
				Actualizado: {formatDate(oficial.fecha_actualizacion)}
			</p>
		</div>
	) : (
		<div class="bg-white p-8 rounded-3xl border border-secondary/5 shadow-sm opacity-50">
			<p class="text-sm text-secondary/40">D贸lar Oficial no disponible</p>
		</div>
	)}

	{blue ? (
		<div class="bg-white p-8 rounded-3xl border border-secondary/5 shadow-sm">
			<div class="flex items-center justify-between mb-6">
				<h3 class="text-xs font-bold uppercase tracking-widest text-secondary/40">
					D贸lar Blue
				</h3>
				<div
					class="w-10 h-10 bg-blue-500/10 rounded-xl flex items-center justify-center text-blue-600"
					set:html={dollarIcon}
				/>
			</div>
			<div class="flex items-end gap-6">
				<div>
					<p class="text-xs font-semibold text-secondary/40 mb-1">Compra</p>
					<p class="text-3xl font-black text-secondary">{formatCurrency(blue.compra)}</p>
				</div>
				<div>
					<p class="text-xs font-semibold text-secondary/40 mb-1">Venta</p>
					<p class="text-3xl font-black text-secondary">{formatCurrency(blue.venta)}</p>
				</div>
			</div>
			<p class="mt-4 text-xs text-secondary/40">
				Actualizado: {formatDate(blue.fecha_actualizacion)}
			</p>
		</div>
	) : (
		<div class="bg-white p-8 rounded-3xl border border-secondary/5 shadow-sm opacity-50">
			<p class="text-sm text-secondary/40">D贸lar Blue no disponible</p>
		</div>
	)}
</div>
