---

<aside
	id="admin-sidebar"
	class="bg-secondary text-white flex flex-col shrink-0 transition-all duration-300 ease-in-out group/sidebar w-72 min-w-[288px] h-screen data-[compact=true]:w-20 data-[compact=true]:min-w-[80px] hover:data-[compact=true]:w-72 hover:data-[compact=true]:min-w-[288px] overflow-hidden border-r border-white/5 relative z-30"
>
	<div
		class="p-8 pb-12 flex items-center gap-3 overflow-hidden whitespace-nowrap"
	>
		<a href="/" class="flex items-center gap-2">
			<div
				class="w-8 h-8 bg-primary rounded flex items-center justify-center shrink-0"
			>
				<span class="text-white font-black text-sm italic">CB</span>
			</div>
			<span
				class="font-black text-xl tracking-tighter uppercase transition-opacity duration-300 group-sidebar-[sidebar][data-compact=true]:opacity-0 group-sidebar-[sidebar][data-compact=true]:hover:opacity-100"
			>
				Admin Panel
			</span>
		</a>
	</div>

	<nav class="grow px-4 space-y-2 overflow-hidden">
		{
			menuItems.map((item) => {
				const isActive =
					pathname.replace(/\/$/, "") ===
					item.href.replace(/\/$/, "");
				return (
					<a
						href={item.href}
						class={`flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-300 group overflow-hidden whitespace-nowrap ${
							isActive
								? "bg-primary text-white shadow-lg shadow-primary/20"
								: "text-white/50 hover:bg-white/5 hover:text-white"
						}`}
					>
						<div
							class={`shrink-0 w-5 h-5 flex items-center justify-center ${isActive ? "opacity-100" : "opacity-50 group-hover:opacity-100"}`}
							set:html={item.icon}
						/>
						<span class="text-sm font-bold tracking-tight transition-opacity duration-300 group-sidebar-[sidebar][data-compact=true]:opacity-0 group-sidebar-[sidebar][data-compact=true]:hover:opacity-100">
							{item.name}
						</span>
					</a>
				);
			})
		}
	</nav>

	<div class="p-4 mt-auto overflow-hidden text-left">
		<form action="/logout" method="POST">
			<button
				class="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-primary font-bold hover:bg-primary/10 transition-colors cursor-pointer whitespace-nowrap overflow-hidden"
			>
				<div class="shrink-0 w-5 h-5">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2.5"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"
						></path><polyline points="16 17 21 12 16 7"
						></polyline><line x1="21" y1="12" x2="9" y2="12"
						></line></svg
					>
				</div>
				<span
					class="text-sm transition-opacity duration-300 group-sidebar-[sidebar][data-compact=true]:opacity-0 group-sidebar-[sidebar][data-compact=true]:hover:opacity-100"
				>
					Salir
				</span>
			</button>
		</form>
	</div>
</aside>

<script>
	const sidebar = document.getElementById("admin-sidebar");
	const isCompact = localStorage.getItem("sidebar-compact") === "true";
	if (isCompact && sidebar) {
		sidebar.setAttribute("data-compact", "true");
	}

	window.addEventListener("toggle-sidebar", () => {
		if (sidebar) {
			const current = sidebar.getAttribute("data-compact") === "true";
			sidebar.setAttribute("data-compact", String(!current));
			localStorage.setItem("sidebar-compact", String(!current));
		}
	});
</script>
