---

<!-- Mobile Overlay -->
<div
	id="sidebar-overlay"
	class="fixed inset-0 bg-black/50 z-40 opacity-0 invisible transition-all duration-300 lg:hidden"
></div>

<aside
	id="admin-sidebar"
	class="bg-secondary text-white flex flex-col shrink-0 transition-all duration-300 ease-in-out group/sidebar h-screen overflow-hidden border-r border-white/5 fixed lg:sticky lg:top-0 z-50 -translate-x-full lg:translate-x-0 data-[open=true]:translate-x-0"
	style="width: 256px; min-width: 256px;"
>
	<div
		class="py-3 px-8 pb-12 flex items-center gap-3 overflow-hidden whitespace-nowrap"
	>
		<a
			href="/"
			class="flex items-center gap-2 transition-all duration-300 group"
		>
			<div
				class="w-8 h-8 bg-primary rounded flex items-center justify-center shrink-0"
			>
				<span class="text-white font-black text-sm italic">CB</span>
			</div>
			<span
				class="font-black text-xl uppercase transition-opacity duration-300 opacity-100 group-data-[compact=true]/sidebar:opacity-0 group-data-[compact=true]/sidebar:group-hover/sidebar:opacity-100"
			>
				Admin
			</span>
		</a>
	</div>

	<nav class="grow px-4 space-y-2 overflow-hidden">
		{
			menuItems.map((item) => {
				const isActive =
					pathname.replace(/\/$/, "") ===
					item.href.replace(/\/$/, "");
				return (
					<a
						href={item.href}
						class={`flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-300 group overflow-hidden whitespace-nowrap ${
							isActive
								? "bg-primary text-white shadow-lg shadow-primary/20"
								: "text-white/50 hover:bg-white/5 hover:text-white"
						}`}
					>
						<div
							class={`shrink-0 w-5 h-5 flex items-center justify-center ${isActive ? "opacity-100" : "opacity-50 group-hover:opacity-100"}`}
							set:html={item.icon}
						/>
						<span class="text-sm font-bold tracking-tight transition-opacity duration-300 opacity-100 group-data-[compact=true]/sidebar:opacity-0 group-data-[compact=true]/sidebar:group-hover/sidebar:opacity-100">
							{item.name}
						</span>
					</a>
				);
			})
		}
	</nav>

	<div class="p-4 mt-auto overflow-hidden text-left">
		<form action="/logout" method="POST">
			<button
				class="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-primary font-bold hover:bg-primary/10 transition-colors cursor-pointer whitespace-nowrap overflow-hidden"
			>
				<div class="shrink-0 w-5 h-5">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2.5"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"
						></path><polyline points="16 17 21 12 16 7"
						></polyline><line x1="21" y1="12" x2="9" y2="12"
						></line></svg
					>
				</div>
				<span
					class="text-sm transition-opacity duration-300 opacity-100 group-data-[compact=true]/sidebar:opacity-0 group-data-[compact=true]/sidebar:group-hover/sidebar:opacity-100"
				>
					Salir
				</span>
			</button>
		</form>
	</div>
</aside>

<script>
	const sidebar = document.getElementById("admin-sidebar");
	const overlay = document.getElementById("sidebar-overlay");
	const EXPANDED_WIDTH = "256px";
	const COMPACT_WIDTH = "80px";

	const isMobile = () => window.innerWidth < 1024;

	const setSidebarCompact = (compact: boolean) => {
		if (!sidebar) return;
		if (compact) {
			sidebar.style.width = COMPACT_WIDTH;
			sidebar.style.minWidth = COMPACT_WIDTH;
			sidebar.setAttribute("data-compact", "true");
		} else {
			sidebar.style.width = EXPANDED_WIDTH;
			sidebar.style.minWidth = EXPANDED_WIDTH;
			sidebar.removeAttribute("data-compact");
		}
	};

	// Initialize compact state from localStorage (only for desktop)
	const isCompact = localStorage.getItem("sidebar-compact") === "true";
	if (isCompact && !isMobile()) {
		setSidebarCompact(true);
	}

	// Hover to expand when compact (desktop only)
	sidebar?.addEventListener("mouseenter", () => {
		if (!isMobile() && sidebar.getAttribute("data-compact") === "true") {
			sidebar.style.width = EXPANDED_WIDTH;
			sidebar.style.minWidth = EXPANDED_WIDTH;
		}
	});

	sidebar?.addEventListener("mouseleave", () => {
		if (!isMobile() && sidebar.getAttribute("data-compact") === "true") {
			sidebar.style.width = COMPACT_WIDTH;
			sidebar.style.minWidth = COMPACT_WIDTH;
		}
	});

	const openMobileDrawer = () => {
		if (sidebar && overlay) {
			sidebar.setAttribute("data-open", "true");
			sidebar.style.width = EXPANDED_WIDTH;
			sidebar.style.minWidth = EXPANDED_WIDTH;
			overlay.classList.remove("opacity-0", "invisible");
			overlay.classList.add("opacity-100", "visible");
			document.body.style.overflow = "hidden";
		}
	};

	const closeMobileDrawer = () => {
		if (sidebar && overlay) {
			sidebar.removeAttribute("data-open");
			overlay.classList.add("opacity-0", "invisible");
			overlay.classList.remove("opacity-100", "visible");
			document.body.style.overflow = "";
		}
	};

	window.addEventListener("toggle-sidebar", () => {
		if (isMobile()) {
			const isOpen = sidebar?.getAttribute("data-open") === "true";
			if (isOpen) {
				closeMobileDrawer();
			} else {
				openMobileDrawer();
			}
		} else {
			if (sidebar) {
				const current = sidebar.getAttribute("data-compact") === "true";
				setSidebarCompact(!current);
				localStorage.setItem("sidebar-compact", String(!current));
			}
		}
	});

	overlay?.addEventListener("click", closeMobileDrawer);

	// Close drawer on navigation (for mobile)
	const navLinks = sidebar?.querySelectorAll("a");
	navLinks?.forEach(link => {
		link.addEventListener("click", () => {
			if (isMobile()) {
				closeMobileDrawer();
			}
		});
	});

	// Handle resize
	window.addEventListener("resize", () => {
		if (!isMobile() && sidebar?.getAttribute("data-open") === "true") {
			closeMobileDrawer();
		}
		// Reset sidebar width on resize based on compact state
		if (!isMobile()) {
			const compact = localStorage.getItem("sidebar-compact") === "true";
			setSidebarCompact(compact);
		}
	});
</script>
