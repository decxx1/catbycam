const featuredProducts = [
	{
		id: 0,
		title: "CAT 390F Excavadora Hidráulica 1:50",
		category: "Escala 1:50",
		image: "/hero-bg.png",
	},
	{
		id: 0,
		title: "CAT D6 XE Topadora 1:50",
		category: "Escala 1:50",
		image: "/hero-bg.png",
	},
	{
