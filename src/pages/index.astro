---
export const prerender = true;
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/web/index/Hero.astro";
import Brands from "@/components/web/index/Brands.astro";
import FeaturedProducts from "@/components/web/index/FeaturedProducts.astro";
import AboutSnapshot from "@/components/web/index/AboutSnapshot.astro";
import ProductHighlights from "@/components/web/index/ProductHighlights.astro";
import CTABanner from "@/components/web/index/CTABanner.astro";
---

<Layout
	title="Distribuidor de réplicas CAT"
	description="Distribuidor autorizado de réplicas oficiales CAT Caterpillar a escala. Modelos coleccionables en escalas 1:16, 1:24, 1:25, 1:50 y 1:87. Envíos a todo el país."
	image="/images/index/hero-bg-replicas.avif"
>
	<Hero />
	<Brands />
	<FeaturedProducts server:defer>
		<div slot="fallback" class="section-padding bg-accent/30">
			<div class="container-custom">
				<div class="flex flex-col md:flex-row md:items-end justify-between gap-8 mb-16">
					<div class="max-w-xl text-left">
						<h2 class="text-4xl md:text-5xl font-black mb-6">
							Réplicas <span class="text-primary">Destacadas</span>
						</h2>
						<p class="text-secondary/60 text-lg">
							Una selección de nuestras réplicas CAT más solicitadas.
							Modelos a escala con detalle de colección.
						</p>
					</div>
				</div>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
					{Array.from({ length: 4 }).map(() => (
						<div class="bg-white rounded-2xl overflow-hidden border border-secondary/5 animate-pulse">
							<div class="aspect-square bg-accent"></div>
							<div class="p-6 space-y-3">
								<div class="h-5 bg-accent rounded w-3/4"></div>
								<div class="h-4 bg-accent rounded w-1/2"></div>
								<div class="h-8 bg-accent rounded w-1/3 mt-4"></div>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>
	</FeaturedProducts>

	<AboutSnapshot />
	<ProductHighlights />
	<CTABanner />
</Layout>
