---
import "@/styles/global.css";
import Sidebar from "@/components/admin/sidebar.astro";
import Topbar from "@/components/admin/topbar.astro";
// Supports weights 100-900
import "@fontsource-variable/inter/opsz-italic.css";

interface Props {
	title: string;
}

const { title } = Astro.props;

// El middleware ya validó la autenticación y adjuntó el usuario
const user = Astro.locals.user!;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/logos/catbycam-logo-circulo-rojo.svg" />
		<title>{title} | Panel Admin - CatByCam</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	</head>
	<body class="bg-accent/10 min-h-screen flex overflow-hidden">
		<Sidebar />
		<div class="flex-1 flex flex-col min-w-0 relative h-screen w-full lg:w-auto">
			<Topbar user={user} />
			<main class="flex-1 p-8 overflow-y-auto custom-scrollbar">
				<slot />
			</main>
		</div>
	</body>
</html>
